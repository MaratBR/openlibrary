package templates

templ Index() {
    @Html("OpenLibrary") {
        <h1>Hello World!</h1>
    }
}

templ Html(title string) {
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{ title }</title>
    </head>
    <body class="m-0">
    { children... }
    </body>
    </html>
}

